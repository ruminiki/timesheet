<?php
// module/Point/view/point/point/edit.phtml:

$title = 'Edit point';
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>

<?php
$form = $this->form;
$form->setAttribute('action', $this->url(
    'point',
    array(
        'action' => 'edit',
        'id'     => $this->id,
    )
));
$form->prepare();

echo $this->form()->openTag($form);
echo $this->formHidden($form->get('id'));
echo $this->formRow($form->get('date'));
echo $this->formRow($form->get('schedule'));
echo $this->formRow($form->get('note'));
?>
<input type="submit" name="option" value="Save" class="btn btn-primary"/>
<input type="submit" name="option" value="Cancel" class="btn btn-warning"/>
<?php
echo $this->form()->closeTag();
?>